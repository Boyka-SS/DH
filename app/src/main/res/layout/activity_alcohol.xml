<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background_color"
    android:gravity="start"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:background="#FFB6C1"
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01010101" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:gravity="start">

        <LinearLayout
            android:id="@+id/op"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/arc_progress"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/connect_bt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/get_alcohol_op"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/add_threshold"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/get_alcohol_add"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/sub_threshold"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/get_alcohol_sub"
                android:textAllCaps="false" />
        </LinearLayout>


        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/arc_progress"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/round_corner"
            custom:arc_bottom_text="@string/arc_bottom_text"
            custom:arc_bottom_text_size="18sp"
            custom:arc_progress="0"
            custom:arc_suffix_text_size="20sp"
            custom:arc_text_color="@color/white"
            custom:arc_text_size="40sp" />
    </RelativeLayout>
</LinearLayout>