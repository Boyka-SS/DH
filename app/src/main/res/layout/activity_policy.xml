<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.navigation.PolicyActivity">

    <LinearLayout
        android:id="@+id/linearLayout14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:background="@mipmap/banner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@mipmap/bannertxt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/round_linearlayout"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="18dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="出行路线"
            android:textColor="#2E2C2C"
            android:textSize="@dimen/dp_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="出发地"
                android:textSize="@dimen/dp_24" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="目的地"
                android:textSize="@dimen/dp_24" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/round_linearlayout"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="18dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="隔离政策"
            android:textColor="#2E2C2C"
            android:textSize="@dimen/dp_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/origin_time_line"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/origin_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/local" />

                    <TextView
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_below="@id/origin_icon"
                        android:layout_centerHorizontal="true"
                        android:background="#00BFFF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/origin_policy_region"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="10">

                    <LinearLayout
                        android:id="@+id/origin_region_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/origin_icon"
                        tools:ignore="NotSibling">

                        <TextView
                            android:id="@+id/origin_region"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="连云港市"
                            android:textSize="@dimen/dp_16"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_12"
                            android:background="@drawable/border_low_risk"
                            android:gravity="center"
                            android:text="全部低风险"
                            android:textColor="@color/light_green"
                            android:textSize="@dimen/dp_10" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/origin_policy_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/origin_region_info"
                        android:layout_marginTop="5dp"
                        android:text="快件在 深圳 ,准备送往下一站 深圳集散中心 [深圳市]"
                        android:textColor="#999"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center|top"
                    android:id="@+id/destination_time_line"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/local" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/origin_policy_region"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="10">

                    <LinearLayout
                        android:id="@+id/origin_region_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/origin_icon"
                        tools:ignore="NotSibling">

                        <TextView
                            android:id="@+id/destination_region"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="连云港市"
                            android:textSize="@dimen/dp_16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/destination_risk_regison"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_12"
                            android:background="@drawable/border_low_risk"
                            android:gravity="center"
                            android:text="全部低风险"
                            android:textColor="@color/light_green"
                            android:textSize="@dimen/dp_10" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/destination_policy_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/origin_region_info"
                        android:layout_marginTop="5dp"
                        android:text="快件在 深圳 ,准备送往下一站 深圳集散中心 [深圳市]"
                        android:textColor="#999"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.24" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />
</androidx.constraintlayout.widget.ConstraintLayout>
